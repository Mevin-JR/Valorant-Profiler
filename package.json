{
  "name": "valorant_profiler",
  "productName": "Valorant Profiler",
  "version": "0.4.0",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development npx electromon .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "supposedly_sam",
  "license": "ISC",
  "description": "Your Ultimate Companion for Saving Profiles and Tracking Stats for Valorant",
  "build": {
    "appId": "com.supposedly_sam.vp",
    "productName": "Valorant Profiler",
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "artifactName": "${productName}-${version} setup.${ext}"
    },
    "files": [
      ".env",
      "main.js",
      "preload.js",
      "config.js",
      "database/**/*",
      "renderer/**/*"
    ],
    "publish": "always"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "electromon": "^1.0.10",
    "firebase": "^10.12.5"
  }
}

{
  "name": "valorant_profiler",
  "productName": "Valorant Profiler",
  "version": "0.4.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-server": "node backend/server.js",
    "dist": "electron-builder",
    "dist-publish": "electron-builder --win --publish always"
  },
  "keywords": [],
  "author": "supposedly_sam",
  "license": "ISC",
  "description": "Your Ultimate Companion for Saving Profiles and Tracking Stats for Valorant",
  "build": {
    "appId": "com.supposedly_sam.vp",
    "productName": "Valorant Profiler",
    "icon": "./renderer/logos/logo.ico",
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "artifactName": "${productName}-${version} setup.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "renderer/**/*"
    ],
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "devDependencies": {
    "app-builder-bin": "^4.2.0",
    "electron": "^31.3.1",
    "electron-builder": "^25.0.5",
    "express": "^4.21.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "electromon": "^1.0.10",
    "firebase": "^10.12.5"
  }
}
